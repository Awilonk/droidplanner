<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"    tools:context="com.playuav.android.RockerFragment"
    >

    <com.playuav.android.RockerView
        android:id="@+id/rockerView1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"/>

    <com.playuav.android.RockerView
        android:id="@+id/rockerView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewRCYaw"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_toLeftOf="@+id/buttonRockerStop"
        android:layout_toStartOf="@+id/buttonRockerStop"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewRCThro"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewRCRoll"
        android:layout_alignTop="@+id/rockerView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewRCPitch"
        android:layout_alignTop="@+id/rockerView2"
        android:layout_toLeftOf="@+id/textViewRCRoll"
        android:layout_toStartOf="@+id/textViewRCRoll"
        android:layout_marginRight="68dp"
        android:layout_marginEnd="68dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止遥控"
        android:id="@+id/buttonRockerStop"
        android:onClick="onbtnStopRocker"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
